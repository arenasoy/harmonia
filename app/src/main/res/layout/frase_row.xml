<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fraseTV"
        android:text="Frase"
        android:layout_alignBottom="@+id/editarFraseBT"
        android:layout_toLeftOf="@+id/editarFraseBT"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingTop="5dp"
        android:padding="5dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editarFraseBT"
        android:onClick="editarFrase"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/removerFraseBT"
        android:layout_toStartOf="@+id/removerFraseBT"
        android:background="@drawable/ic_edit_black_24dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removerFraseBT"
        android:onClick="confirmarRemoverFrase"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_delete_24px"/>


</RelativeLayout>