<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarme_tocando"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifpr.tcc.remedio.alarme.AlarmeTocando">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/background"
        android:layout_alignParentTop="true"
        android:id="@+id/fotoRemedioIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeRemedioTV"
        android:layout_alignStart="@+id/nomeRemedioTV"
        android:id="@+id/horaRemedioTV"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doseRemedioTV"
        android:layout_below="@+id/horaRemedioTV"
        android:layout_alignStart="@+id/horaRemedioTV"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="Parar alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pararBT"
        android:onClick="pararAlarme"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeRemedioTV"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/fotoRemedioIV"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />


</RelativeLayout>
