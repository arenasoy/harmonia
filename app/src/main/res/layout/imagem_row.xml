<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editarImagemBT"
        android:onClick="editarImagem"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/removerImagemBT"
        android:layout_toStartOf="@+id/removerImagemBT"
        android:background="@drawable/ic_edit_black_24dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removerImagemBT"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_delete_24px"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLista"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editarImagemBT"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>
