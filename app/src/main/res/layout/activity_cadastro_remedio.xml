<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifpr.tcc.remedio.views.CadastroRemedio">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:id="@+id/scrollLayoutCadastroRemedio">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutCadastroRemedio">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutFotoRemedioCadastro"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Foto do remédio:"
                    android:id="@+id/fotoRemedioLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/abc_action_bar_default_height_material" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fotoRemedio"
                    android:background="@drawable/borda_verde"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"
                    android:minHeight="120dp"
                    android:minWidth="120dp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"/>

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeria"
                    android:id="@+id/galeriaBT"
                    android:onClick="abrirGaleria"
                    android:layout_alignTop="@+id/fotoRemedio"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:src="@drawable/ic_photo_camera_white_24px"
                    android:onClick="abrirCamera"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:backgroundTint="@color/azulClaro"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/galeriaBT"
                    android:layout_alignStart="@id/galeriaBT"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutDadosCadastroRemedio"
                android:layout_alignParentStart="true"
                android:layout_below="@id/layoutFotoRemedioCadastro"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nome:"
                    android:id="@+id/nomeRemedioTV"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomeRemedioET"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Nome do remédio"
                    android:layout_below="@id/nomeRemedioTV"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Intervalo:"
                    android:id="@+id/intervaloLabel"
                    android:layout_below="@id/nomeRemedioET"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/intervaloTV"
                    android:text="Uma vez"
                    android:onClick="abrirIntervalos"
                    android:layout_below="@id/intervaloLabel"
                    android:layout_alignParentStart="true"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Horários e doses:"
                    android:id="@+id/qntTV"
                    android:layout_below="@id/intervaloTV"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/horaDoseTV"
                    android:onClick="abrirQuantidadeDose"
                    android:text="Clique para adicionar"
                    android:layout_below="@id/qntTV"
                    android:layout_alignParentStart="true"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="italic" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutDadosCadastroRemedio"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar"
                    android:id="@+id/salvarRemedioBT"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="salvarRemedio"
                    android:background="@color/verdeMedio"
                    android:layout_alignParentRight="true"
                    style="@style/Widget.AppCompat.Button.Colored" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
