<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="br.edu.ifpr.tcc.atividade.imagem.views.CadastroImagem"
    android:background="@color/background">

    <ImageButton
    android:id="@+id/ivImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_photo_camera_white_24px"
    android:onClick="abrirCamera"
    android:minHeight="100px"
    android:minWidth="100px"
    android:maxHeight="100px"
    android:maxWidth="100px"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/azulClaro"
        android:layout_below="@+id/btnSelectPhoto"
        android:layout_alignStart="@+id/btnSelectPhoto"
        android:layout_alignEnd="@+id/btnSelectPhoto" />

    <Button
        android:id="@+id/btnSelectPhoto"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:text="Escolher foto"
        android:onClick="abrirGaleria"
        android:layout_marginTop="104dp"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:onClick="salvarImagem"
        android:id="@+id/button"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/imageView"
    android:layout_weight="0.01"
        android:layout_below="@+id/ivImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>