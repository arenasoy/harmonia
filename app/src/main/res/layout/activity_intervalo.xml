<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".remedio.views.IntervaloActivity">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Repetir"
        android:id="@+id/textView14" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uma vez"
        android:id="@+id/umaVezBT"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diariamente"
        android:id="@+id/diariamenteBT"
        android:layout_below="@+id/umaVezBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/umaVezBT" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semanalmente"
        android:id="@+id/semanalmenteBT"
        android:layout_below="@+id/diariamenteBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/diariamenteBT" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensalmente"
        android:id="@+id/mensalmenteBT"
        android:layout_below="@+id/semanalmenteBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cadaHorasBT"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cada X Horas"
        android:id="@+id/cadaHorasBT"
        android:layout_below="@+id/mensalmenteBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/umaVezBT" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cada X Dias"
        android:id="@+id/cadaDiasBT"
        android:layout_below="@+id/cadaHorasBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cadaHorasBT" />

</RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okIntervaloBT"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:onClick="salvarIntervalo"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />
</RelativeLayout>
